<UserControl x:Class="MP2.Mp2SkillMoverGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP2" 
             xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="auto" d:DesignWidth="auto">
    <!--this allows you to <bind> DataContext of the grid to your settings.-->
    <!--https://learn.microsoft.com/en-us/dotnet/api/system.windows.frameworkelement.datacontext?view=windowsdesktop-8.0-->
    <Grid x:Name="Root" DataContext="{x:Static local:Mp2SkillMoverSettings.Instance}" Width="Auto" Height="Auto">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Basic Configuration">
                    <StackPanel>
                        <DockPanel>
                            <Label Content="MoveRange: " Margin="5,0,0,0" ToolTipService.ToolTip="When the path calculation decide what is next point to move to, it filter out point to close to us, until it reach a distance >= to this value. [25/30 are great average value]" />
                            <mahapps:NumericUpDown Margin="5,0,0,0" Value="{Binding Path=MoveRange, Mode=TwoWay}" Minimum="15" Maximum="45" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <DockPanel>
                            <Label Content="SingleUseDistance: " Margin="5,0,0,0" ToolTipService.ToolTip="When the path calculation don't have points at a distance higher than this value, the single use is triggered and this mean that no skill to move is used, and the mover click the basic move skill only once,  instead of keeping the button pressed. this is the situatiion where you are approaching a npc, item, transaction or anything you want to interact to. [15/18 are best average]" />
                            <mahapps:NumericUpDown Margin="5,0,0,0" Value="{Binding Path=SingleUseDistance, Mode=TwoWay}" Minimum="15" Maximum="45" HorizontalAlignment="Left"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                <Expander Header="Skills">
                    <StackPanel>
                        <DockPanel>
                            <Label Content="Min mana %:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" ToolTip="The move skill will not be used under this percent of mana."/>
                            <TextBox Text="{Binding ElementName=Minmana, Path=Value, UpdateSourceTrigger=PropertyChanged}" Margin="5,2,0,0" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True"></TextBox>
                            <Slider x:Name="Minmana" Value="{Binding Path=MoveMinManaValue, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="5,0,0,0" Maximum="100" Minimum="0" TickPlacement="BottomRight" TickFrequency="10" Width="80" SmallChange="1" ToolTip="The move skill will not be used under this percent of mana."/>
                            <CheckBox Content="Use Blood Magic" IsChecked="{Binding Path=UseBloodMagicValue, Mode=TwoWay}" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" ToolTip="Activate if you use Blood Magic with the Move Skill."></CheckBox>
                        </DockPanel>
                    </StackPanel>
                </Expander>
                <Expander Header="Advice">
                    <StackPanel>
                        <Label Content="NEWER set default movement skill OR skill to move to mouse buttons, ALWAYS us q,w,e,r,t for them."></Label>
                        <Label Content="If you do not know how to configure the plugin, leave the settings to default values."></Label>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
